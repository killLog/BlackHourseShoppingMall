    </select>
    <!-- æ ¹æ®IDåˆ—è¡¨æ‰¹é‡æŸ¥è¯¢ç”¨æˆ·ï¼šä¿®æ­£å‚æ•°åç§°ä¸º ids -->
    <select id="queryAllUser" resultType="xyz.sonyp.domain.po.User">
        SELECT * FROM `user`
        <where>
            <if test="ids != null and !ids.isEmpty()">
